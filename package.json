{
  "name": "incident-response",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production ./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "sass-lint -v -q && eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "sass-lint-auto-fix",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "jest",
    "test:routes": "jest -c jest.routes.config.js",
    "test:a11y": "jest -c jest.a11y.config.js --maxWorkers 15",
    "cichecks": "yarn && yarn build && yarn lint  && yarn test && yarn test:routes &&  yarn test:a11y"
  },
  "dependencies": {
    "@hmcts/info-provider": "^1.0.0",
    "@hmcts/nodejs-healthcheck": "^1.7.1",
    "@hmcts/nodejs-logging": "^4.0.2",
    "@types/config": "^0.0.41",
    "@types/cookie-parser": "^1.4.3",
    "@types/csurf": "^1.11.2",
    "@types/es6-promisify": "^6.0.1",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/node": "^18.0.3",
    "@types/nunjucks": "^3.2.1",
    "@types/require-directory": "^2.1.2",
    "@types/serve-favicon": "^2.5.3",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.5",
    "express": "^4.18.1",
    "express-nunjucks": "^2.2.5",
    "got": "11.8.5",
    "govuk-frontend": "^4.2.0",
    "helmet": "^5.1.0",
    "jquery": "^3.6.0",
    "nunjucks": "^3.2.3",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.5.0",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@types/chai-as-promised": "^7.1.5",
    "@types/copy-webpack-plugin": "^10.1.0",
    "@types/jest": "^28.1.4",
    "@types/mini-css-extract-plugin": "^2.5.1",
    "@types/supertest": "^2.0.12",
    "@types/webpack-dev-middleware": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/eslint-plugin-tslint": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.5",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "debug": "^4.3.4",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.2.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "mini-css-extract-plugin": "^2.6.1",
    "nock": "^13.2.8",
    "nodemon": "^2.0.19",
    "pa11y": "^6.2.3",
    "prettier": "^2.7.1",
    "request": "^2.88.2",
    "sass": "^1.53.0",
    "sass-lint": "^1.13.1",
    "sass-lint-auto-fix": "^0.21.2",
    "sass-loader": "^13.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "style-loader": "^3.3.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "tslint": "^6.1.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-middleware": "^5.3.3",
    "webpack-node-externals": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,ts}": "eslint --fix"
  }
}
