{
  "name": "incident-response",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production ./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "stylelint **/*.scss && eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:css:fix": "stylelint --fix **/*.scss",
    "lint:js:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "jest",
    "test:routes": "jest -c jest.routes.config.js",
    "test:a11y": "jest -c jest.a11y.config.js --maxWorkers 15",
    "cichecks": "yarn && yarn build && yarn lint  && yarn test && yarn test:routes &&  yarn test:a11y"
  },
  "dependencies": {
    "@hmcts/info-provider": "1.0.0",
    "@hmcts/nodejs-healthcheck": "1.7.3",
    "@hmcts/nodejs-logging": "4.0.4",
    "@hmcts/properties-volume": "0.0.14",
    "@slack/bolt": "3.22.0",
    "@types/config": "0.0.41",
    "@types/cookie-parser": "1.4.8",
    "@types/csurf": "1.11.5",
    "@types/es6-promisify": "6.0.4",
    "@types/express": "4.17.13",
    "@types/helmet": "4.0.0",
    "@types/node": "18.19.70",
    "@types/nunjucks": "3.2.2",
    "@types/require-directory": "2.1.6",
    "@types/serve-favicon": "2.5.7",
    "config": "3.3.7",
    "cookie-parser": "1.4.7",
    "csurf": "1.11.0",
    "date-fns": "2.29.0",
    "date-fns-tz": "1.3.8",
    "express": "4.20.0",
    "express-nunjucks": "2.2.5",
    "got": "11.8.6",
    "govuk-frontend": "4.2.0",
    "helmet": "5.1.0",
    "jquery": "3.7.1",
    "node-cache": "5.1.2",
    "nunjucks": "3.2.4",
    "require-directory": "2.1.1",
    "serve-favicon": "2.5.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4"
  },
  "devDependencies": {
    "@types/chai-as-promised": "7.1.8",
    "@types/copy-webpack-plugin": "10.1.3",
    "@types/jest": "28.1.6",
    "@types/mini-css-extract-plugin": "2.5.1",
    "@types/supertest": "2.0.16",
    "@types/webpack-dev-middleware": "5.3.0",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/eslint-plugin-tslint": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "chai": "4.5.0",
    "chai-as-promised": "7.1.2",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.11.0",
    "debug": "4.4.0",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "26.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.3",
    "jest": "28.1.3",
    "mini-css-extract-plugin": "2.9.2",
