    "sass-loader": "13.0.2",
    "sinon": "14.0.2",
    "sinon-chai": "3.7.0",
    "style-loader": "3.3.4",
    "stylelint": "14.9.1",
    "stylelint-config-standard-scss": "5.0.0",
    "supertest": "6.2.4",
    "ts-jest": "28.0.8",
    "ts-loader": "9.3.1",
    "tslint": "6.1.3",
    "uglifyjs-webpack-plugin": "2.2.0",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-middleware": "5.3.4",
    "webpack-node-externals": "3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,ts}": "eslint --fix"
  }
}
